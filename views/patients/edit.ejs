<!DOCTYPE html>
<html lang="en">
<%-include("../partials/head.ejs") %>
<body>
    <%-include("../partials/header.ejs") %>

    <main>
        <div>
            <h2><%=patient.name%></h2>
            <h3>Date of Birth: <%=patient.dateOfBirth%></h3>
            <form action="/<%=patient._id%>?_method=PUT" method="post">
                <fieldset>
                    <legend>Update <%=patient.test%></legend>
                    <label>Gram Stain:
                        <select id="gramStain" name="gramStain">
                            <option>Gram Positive Cocci</option>
                            <option>Gram Negative Cocci</option>
                            <option>Gram Positive Bacilli</option>
                            <option>Gram Negative Bacilli</option>
                        </select>
                    </label>

                    <table>
                        <thead>
                            <tr>
                                <th>Plates</th>
                                <th>Colony Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (patient.plates && patient.colonyDescription) {%>
                            <%for (let i = 0; i < patient.plates.length; i++) {%>
                                <tr>
                                    <td><%=patient.plates[i]%></td>
                                    <td><%= patient.colonyDescription[i]%>"></td>
                                </tr>
                            <%}%>
                            <%}%>
                            <tr>
                                <td><input type="text" name="plates" placeholder="Enter Plate"></td>
                                <td><input type="text" name="colonyDescription" placeholder="Enter Colony Description"></td>
                                <td><input type="text" name="name" placeholder="Enter Name"></td>
                                <td><input type="date" name="dateOfBirth" placeholder="Enter date of birth"></td>
                                <td><input type="text" name="test" placeholder="Enter test"></td>
                                <td><input type="checkbox" name="testCompleted"></td>


                            </tr>
                        </tbody>
                    </table>

                    <label>Identification: <input type="text" name="bacteriaIdentification" value="<%= patient.bacteriaIdentification !== undefined ? patient.bacteriaIdentification : '' %>"></label>

                </fieldset>
                <button>Update Test</button>
            </form>
        </div>
    </main>
</body>
</html>